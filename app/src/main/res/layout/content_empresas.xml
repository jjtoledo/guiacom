<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jose.guiacom.EmpresasActivity"
    tools:showIn="@layout/activity_empresas">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtInfoSeg"
            android:textSize="12sp"
            android:id="@+id/txtInfo"
            android:layout_marginTop="5sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtCidade"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/txtCidade"
            android:layout_marginTop="5sp" />

    </LinearLayout>

    <View
        android:id="@+id/Divisor2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#A3A3A3"
        android:layout_below="@+id/l2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5sp" />

    <View
        android:id="@+id/Divisor3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#A3A3A3"
        android:layout_below="@+id/l1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Divisor2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/emp1"
            android:id="@+id/btnEmpresas"
            android:background="@color/background"
            android:layout_marginRight="5sp"
            android:layout_marginEnd="5sp" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/city1"
            android:id="@+id/btnTrocarCidade"
            android:background="@color/background"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_marginTop="5sp"
        android:id="@+id/btnVoltar"
        android:src="@drawable/voltar"
        android:background="@color/background"
        android:layout_below="@+id/Divisor3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/segmento"
        android:id="@+id/txtSeg"
        android:layout_alignTop="@+id/btnVoltar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14sp"/>


    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginTop="5sp"
        android:id="@+id/lvEmpresas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnVoltar">
    </ListView>
</RelativeLayout>
