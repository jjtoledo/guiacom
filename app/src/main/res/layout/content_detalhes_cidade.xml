<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:context="com.jose.guiacom.DetalhesCidadeActivity"
        tools:showIn="@layout/activity_detalhes_cidade">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSobre"
            android:textSize="15sp"
            android:layout_marginTop="15sp"
            android:text="@string/txtSobre"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCity"
            android:textSize="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="60sp"
            android:layout_marginStart="60sp"
            android:textStyle="bold"
            android:text=""/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVoltar"
            android:src="@drawable/voltar"
            android:background="@color/background"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <android.support.v4.view.ViewPager
            android:layout_width="wrap_content"
            android:layout_height="150sp"
            android:layout_marginRight="24sp"
            android:layout_marginEnd="24sp"
            android:layout_marginLeft="24sp"
            android:layout_marginStart="24sp"
            android:id="@+id/view_pager"
            android:layout_below="@+id/btnVoltar"
            android:layout_marginTop="20sp" >

        </android.support.v4.view.ViewPager>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previous"
            android:layout_below="@+id/btnVoltar"
            android:layout_marginTop="75sp"
            android:tint="@color/gray"
            android:src="@drawable/ic_keyboard_arrow_left_white_24dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btnVoltar"
            android:layout_marginTop="75sp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtApoio"
            android:textSize="15sp"
            android:layout_marginTop="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/view_pager"
            android:visibility="gone"
            android:text="@string/txtApoio"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foto_pref"
            android:layout_below="@+id/txtApoio"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginTop="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtHistoria"
            android:textSize="15sp"
            android:layout_marginTop="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/foto_pref"
            android:text="@string/txtHistoria"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescricao"
            android:textSize="15sp"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/txtHistoria"
            android:text=""/>
    </RelativeLayout>
</ScrollView>