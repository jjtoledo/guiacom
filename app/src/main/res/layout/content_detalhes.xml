<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".DetalhesPremiumActivity"
        tools:showIn="@layout/activity_detalhes_premium">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVoltar"
            android:src="@drawable/voltar"
            android:background="@color/background"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgTel"
            android:src="@drawable/telefone"
            android:layout_below="@+id/txtPresentation"
            android:layout_alignStart="@+id/txtPresentation"
            android:layout_alignLeft="@+id/txtPresentation"
            android:layout_marginTop="50sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgAddress"
            android:src="@drawable/endereco"
            android:layout_below="@+id/txtTel2"
            android:layout_alignStart="@+id/imgTel"
            android:layout_alignLeft="@+id/imgTel"
            android:layout_marginTop="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgSite"
            android:src="@drawable/site"
            android:layout_below="@+id/txtEstado"
            android:layout_alignStart="@+id/imgAddress"
            android:layout_alignLeft="@+id/imgAddress"
            android:layout_marginTop="30sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgEmail"
            android:src="@drawable/email"
            android:layout_below="@+id/imgSite"
            android:layout_alignStart="@+id/imgSite"
            android:layout_alignLeft="@+id/imgSite"
            android:layout_marginTop="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNomeTitle"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="60sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtNome"
            android:layout_below="@+id/txtNomeTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtPresentation"
            android:layout_below="@+id/txtNome"
            android:layout_alignStart="@+id/txtNome"
            android:layout_alignLeft="@+id/txtNome"
            android:layout_marginTop="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtTel"
            android:textStyle="bold"
            android:layout_alignTop="@+id/imgTel"
            android:layout_toRightOf="@+id/imgEmail"
            android:layout_toEndOf="@+id/imgEmail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtTel2"
            android:textStyle="bold"
            android:layout_marginTop="5sp"
            android:layout_below="@+id/txtTel"
            android:layout_toRightOf="@+id/imgEmail"
            android:layout_toEndOf="@+id/imgEmail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddressTitle"
            android:textSize="12sp"
            android:layout_alignTop="@+id/imgAddress"
            android:layout_alignLeft="@+id/txtTel"
            android:layout_alignStart="@+id/txtTel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtAddress"
            android:layout_below="@id/txtAddressTitle"
            android:layout_alignLeft="@+id/txtTel"
            android:layout_alignStart="@+id/txtTel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBairroTitle"
            android:layout_marginTop="10sp"
            android:textSize="12sp"
            android:layout_below="@+id/txtAddress"
            android:layout_alignLeft="@+id/txtAddress"
            android:layout_alignStart="@+id/txtAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtBairro"
            android:layout_below="@+id/txtBairroTitle"
            android:layout_alignLeft="@+id/txtAddress"
            android:layout_alignStart="@+id/txtAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCidadeTitle"
            android:layout_marginTop="10sp"
            android:textSize="12sp"
            android:layout_below="@+id/txtBairro"
            android:layout_alignLeft="@+id/txtBairro"
            android:layout_alignStart="@+id/txtBairro" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtCidade"
            android:layout_below="@+id/txtCidadeTitle"
            android:layout_alignLeft="@+id/txtBairro"
            android:layout_alignStart="@+id/txtBairro" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEstadoTitle"
            android:layout_marginTop="10sp"
            android:textSize="12sp"
            android:layout_below="@+id/txtCidade"
            android:layout_alignLeft="@+id/txtCidade"
            android:layout_alignStart="@+id/txtCidade" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtEstado"
            android:layout_below="@+id/txtEstadoTitle"
            android:layout_alignLeft="@+id/txtCidade"
            android:layout_alignStart="@+id/txtCidade" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtSite"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_alignTop="@+id/imgSite"
            android:layout_toRightOf="@+id/imgSite"
            android:layout_toEndOf="@+id/imgSite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtEmail"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_alignTop="@+id/imgEmail"
            android:layout_toRightOf="@+id/imgEmail"
            android:layout_toEndOf="@+id/imgEmail" />
    </RelativeLayout>
</ScrollView>